{
  "name": "technical-test-backend-dev-ideka",
  "version": "1.0.0",
  "description": "Technical test for a position as senior backend developer",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "db:generate": "npx prisma generate --schema=./src/prisma/schema.prisma",
    "lint": "biome lint --write ./src ./tests",
    "format": "biome format --write ./src ./tests",
    "check": "biome check --write ./src ./tests",
    "ci": "biome ci ./src ./tests",
    "test": "TS_NODE_PROJECT=tsconfig.test.json mocha",
    "test:watch": "mocha --require ts-node/register 'tests/**/*.test.ts' --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "express": "^5.1.0",
    "prisma": "^6.19.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "chai": "^6.2.1",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
